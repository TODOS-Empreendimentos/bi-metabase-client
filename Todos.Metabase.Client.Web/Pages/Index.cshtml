@page
@model IndexModel
@{
    ViewData["Title"] = "Autenticar";
}

<h1>Log in</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post" novalidate="novalidate">
                <h4>Informe suas credenciais.</h4>
                <hr>
                <div class="text-danger validation-summary-valid" data-valmsg-summary="true">
                    <ul>
                        <li style="display:none"></li>
                    </ul>
                </div>
                <div class="form-group">
                    <label asp-for="UserName">Usuário</label>
                    <input class="form-control" type="email" asp-for="UserName">
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Senha</label>
                    <input class="form-control" type="password" asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        @if (Model.IsAuthenticated())
        {
            <section>
                <h4>Acessar Consultas.</h4>
                <hr>
                <div>
                    <p>
                       <a asp-page="/RankingProspeccao" asp-route-session="@Model.Session"> Ranking Prospecção</a>
                    </p>
                </div>
            </section>
        }


    </div>
</div>
